                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </GridPane.margin>
            </Label>
            <Label fx:id="taskNameLabel" prefHeight="106.0" prefWidth="96.0" text="Name" GridPane.columnIndex="2">
